@model IEnumerable<Categories>
<nav class="yamm megamenu-horizontal">
    <ul class="nav">
        @foreach (var group in Model.Where(c => c.ParentId == null))
        {
            <li class="dropdown menu-item">
                <a href="/category-@group.CategoryId" class="dropdown-toggle" data-toggle="dropdown"><i class="icon fa fa-arrow-circle-right" aria-hidden="true"></i>@group.CategoryName</a>
                <!-- ================================== MEGAMENU VERTICAL ================================== -->
                <ul class="dropdown-menu mega-menu" >
                    <li class="yamm-content">
                        <div class="row" >
                            <div class="col-xs-12 col-sm-12 col-lg-4" >
                                <ul>
                                    <a href="/category-@group.CategoryId"><i class="icon fa fa-arrow-circle-down" aria-hidden="true"></i>&nbsp; @group.CategoryName</a>
                                    @foreach (var subGroup in Model.Where(c => c.ParentId == group.CategoryId))
                                    {
                                        <li><a href="/category-@subGroup.CategoryId">@subGroup.CategoryName</a></li>
                                    }
                                </ul>
                            </div>
                            <div class="dropdown-banner-holder"> <a href="#"><img alt="@group.CategoryName" style="width: 200px; margin: 16px;" src="/images/categoriesBanner/@group.ParentCategoryBanner"></a> </div>
                        </div>
                        <!-- /.row -->
                    </li>
                    <!-- /.yamm-content -->
                </ul>
                <!-- /.dropdown-menu -->
                <!-- ================================== MEGAMENU VERTICAL ================================== -->
            </li>
        }
    </ul>
    <!-- /.nav -->
</nav>
<!-- /.megamenu-horizontal -->