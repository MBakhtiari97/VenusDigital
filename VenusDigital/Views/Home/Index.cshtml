@model IEnumerable<VenusDigital.Models.ViewModels.SingleProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<partial name="_Slider" />

@section SideBar
{
    <partial name="_LeftSideBar"/>
}
<div class="col-md-12" style="text-align: center; font-size: 16px;font-weight: bold;">
    <div class="row" style="background: #fff; border-radius: 5px;margin: 10px;">
        <p style="font-size: 24px; margin-top: 10px;">New Products</p>
        @foreach (var item in Model)
        {
            <div class="col-md-3" style="margin: 20px 0 20px 0; ">
                <partial name="_SingleProduct" model="@item" />
            </div>
        }
    </div>
</div>

