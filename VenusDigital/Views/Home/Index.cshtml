@model IEnumerable<VenusDigital.Models.ViewModels.SingleProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<partial name="_Slider" />

@section SideBar
{
<partial name="_LeftSideBar" />
}
<div class="col-md-12 product-in-home">
    <div class="row product-in-home-div">
        <p style="">New Products</p>
        @foreach (var item in Model)
        {
            <div class="col-md-3 single-product-home">
                <partial name="_SingleProduct" model="@item" />
            </div>
        }
    </div>
</div>

<!--Banner-->
<div class="col col-md-12 image-banner">
    <div class="row">
        <div class="col-md-8">
            <a href="/Search?q=Mac">
                <img src="/assets/images/banners/Mac.png" class="img-big-banner"/>
            </a>
        </div>
        <div class="col-md-4">
            <a href="/Search?q=Apple Watch">
                <img src="/assets/images/banners/Watch.png" class="img-small-banner"/>
            </a>
        </div>
    </div>
</div>

