@model IEnumerable<VenusDigital.Models.Users>

@{
    ViewData["Title"] = "Users";
}

<h2>Manage Users</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">New User</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAdmin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                <a asp-action="Create" asp-controller="UsersPostInfo" asp-route-userId="@item.UserId">Post Info's</a> |
                <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>


<!--Paging-->
<form asp-action="Index" id="change">
    <input type="hidden" value="1" name="pageId" id="pageId"/>
</form>

<ul class="pagination">
    <li class="page-item disabled">
        <a class="page-link">«</a>
    </li>
    @if (ViewBag.PageCount > 1)
    {
        @for (var i = 1; i <= ViewBag.PageCount;i++)
        {
            <li class="page-item active">
                <a class="page-link" onclick="changePage(@i)">@i</a>
            </li>
        }
    }
    <li class="page-item">
        <a class="page-link">»</a>
    </li>
</ul>

<script>
    function changePage(pageId)
    {
        $("#pageId").val(pageId);
        $("#change").submit();
    }
</script>