            <a href="/admin/home/index"> <img alt="image" src="/adminAssets/img/logo.png" class="header-logo" /> <span
                class="logo-name">Venus Digital</span>
            </a>
          </div>
          <ul class="sidebar-menu">
            <li class="menu-header">Main</li>
            <li class="dropdown active">
              <a href="/admin/home/index" class="nav-link"><i data-feather="monitor"></i><span>Dashboard</span></a>
            </li>
            <li class="dropdown">
              <a href="/admin/users/index" class="menu-toggle nav-link has-dropdown"><i
                  data-feather="users"></i><span>Manage Users</span></a>
              <ul class="dropdown-menu">
                <li><a class="nav-link" href="/admin/users/index">Users</a></li>
                <li><a class="nav-link" href="/Admin/Users/Create">Add New User</a></li>
              </ul>
