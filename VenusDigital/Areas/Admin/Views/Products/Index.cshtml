@model IEnumerable<VenusDigital.Models.Products>

@{
    ViewData["Title"] = "Manage Products";
}

<h2>Manage Products</h2>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Add Product</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductInStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductQuantityInStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductMainPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductScore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductOnSalePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalePercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductQuantityInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductMainPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductOnSalePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalePercent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a asp-action="Create" asp-controller="Galleries" asp-route-productId="@item.ProductId">Gallery</a> |
                <a asp-action="Create" asp-controller="Tags" asp-route-productId="@item.ProductId">Tag</a> |
                <a asp-action="Create" asp-controller="Features" asp-route-productId="@item.ProductId">Feature</a> |
                <a asp-action="Create" asp-controller="Reviews" asp-route-productId="@item.ProductId">Review</a> |
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<!--Paging-->
<form asp-action="Index" id="change">
    <input type="hidden" value="1" name="pageId" id="pageId"/>
</form>

<ul class="pagination">
    <li class="page-item disabled">
        <a class="page-link" href="#">«</a>
    </li>
    @if (ViewBag.PageCount > 1)
    {
        @for (var i = 1; i <= ViewBag.PageCount;i++)
        {
            <li class="page-item active">
                <a class="page-link" onclick="changePage(@i)">@i</a>
            </li>
        }
    }
    <li class="page-item">
        <a class="page-link" href="#">»</a>
    </li>
</ul>

<script>
    function changePage(pageId)
    {
        $("#pageId").val(pageId);
        $("#change").submit();
    }
</script>