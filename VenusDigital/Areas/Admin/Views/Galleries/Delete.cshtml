@model VenusDigital.Models.ProductGalleries

@{
    ViewData["Title"] = "Gallery";
}

<h2>Remove Image</h2>

<h3>Are you sure you want to delete this image?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ImageName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ImageRefersTo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ImageRefersTo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ImageAltName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ImageAltName)
        </dd>
        <dt>
            Image
        </dt>
        <dd>
            <img src="/images/pics/@Model.ImageName" class="imgInDeleteGallery img-thumbnail"/>
