@model VenusDigital.Models.Coupons

@{
    ViewData["Title"] = "Coupon";
}

<h2>Update Coupon</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CouponId" />
            <div class="form-group">
                <label asp-for="CouponCode" class="control-label"></label>
                <input asp-for="CouponCode" class="form-control" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CouponPercent" class="control-label"></label>
                <input asp-for="CouponPercent" class="form-control" />
                <span asp-validation-for="CouponPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CouponValue" class="control-label"></label>
                <input asp-for="CouponValue" class="form-control" />
                <span asp-validation-for="CouponValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CouponCodeCount" class="control-label"></label>
                <input asp-for="CouponCodeCount" class="form-control" />
                <span asp-validation-for="CouponCodeCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
