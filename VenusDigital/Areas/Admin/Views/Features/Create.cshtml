@model VenusDigital.Models.Features

@{
    ViewData["Title"] = "Feature";
}

<h2>New Feature</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId"/>
            <div class="form-group">
                <label asp-for="FeatureTitle" class="control-label"></label>
                <input asp-for="FeatureTitle" class="form-control" />
                <span asp-validation-for="FeatureTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeatureValue" class="control-label"></label>
                <input asp-for="FeatureValue" class="form-control" />
                <span asp-validation-for="FeatureValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Insert" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
