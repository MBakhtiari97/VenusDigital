@model VenusDigital.Models.Newsletters

@{
    ViewData["Title"] = "Newsletter";
}

<h2>Subscribe User To Newsletter</h2>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewslettersSubedUserEmail" class="control-label"></label>
                <input asp-for="NewslettersSubedUserEmail" class="form-control" />
                <span asp-validation-for="NewslettersSubedUserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Subscribe" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
